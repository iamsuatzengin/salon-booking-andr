<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">

    <include app:graph="@navigation/home_graph" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.zapplications.salonbooking.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/splashToSignIn"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/splashToHome"
            app:destination="@+id/home_graph"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/splashToAppPermissions"
            app:destination="@id/appPermissionsFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.zapplications.salonbooking.ui.auth.signin.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/signInFragmentToVerifyFragment"
            app:destination="@id/verifyFragment"
            app:enterAnim="@anim/slide_enter"
            app:exitAnim="@anim/slide_exit"
            app:popEnterAnim="@anim/slide_pop_enter"
            app:popExitAnim="@anim/slide_pop_exit"/>
    </fragment>
    <fragment
        android:id="@+id/verifyFragment"
        android:name="com.zapplications.salonbooking.ui.auth.verify.VerifyFragment"
        android:label="fragment_verify"
        tools:layout="@layout/fragment_verify">
        <argument
            android:name="emailOrPhoneNumber"
            app:argType="string" />

        <argument
            android:name="inputType"
            app:argType="com.zapplications.salonbooking.domain.model.SignInType" />
        <action
            android:id="@+id/verifyToHome"
            app:destination="@id/home_graph"
            app:enterAnim="@anim/slide_enter"
            app:exitAnim="@anim/slide_exit"
            app:popEnterAnim="@anim/slide_pop_enter"
            app:popExitAnim="@anim/slide_pop_exit"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/verifyToAppPermissions"
            app:destination="@id/appPermissionsFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/appPermissionsFragment"
        android:name="com.zapplications.salonbooking.ui.permissions.AppPermissionsFragment"
        android:label="fragment_app_permissions"
        tools:layout="@layout/fragment_app_permissions">
        <action
            android:id="@+id/appPermissionsToHomeGraph"
            app:destination="@id/home_graph"
            app:enterAnim="@anim/slide_enter"
            app:exitAnim="@anim/slide_exit"
            app:popEnterAnim="@anim/slide_pop_enter"
            app:popExitAnim="@anim/slide_pop_exit"
            app:popUpTo="@id/appPermissionsFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>