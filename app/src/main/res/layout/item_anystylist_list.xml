<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_stylist_item"
    android:padding="@dimen/padding12">

    <FrameLayout
        android:id="@+id/flAnyStylistIconContainer"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_any_stylist_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivStylistIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/content_description_stylist_image"
            android:src="@drawable/anystylist" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvAnyStylistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin16"
        android:fontFamily="@font/inter_18pt_regular"
        android:text="@string/title_any_stylist"
        android:textColor="@color/color_dark1"
        android:textSize="@dimen/size16"
        app:layout_constraintStart_toEndOf="@id/flAnyStylistIconContainer"
        app:layout_constraintTop_toTopOf="@id/flAnyStylistIconContainer" />

    <TextView
        android:id="@+id/tvAnyStylistDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin16"
        android:fontFamily="@font/inter_18pt_regular"
        android:text="@string/text_next_available_stylist"
        android:textColor="@color/color_gray1"
        android:textSize="@dimen/size14"
        app:layout_constraintStart_toEndOf="@id/flAnyStylistIconContainer"
        app:layout_constraintTop_toBottomOf="@id/tvAnyStylistTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>