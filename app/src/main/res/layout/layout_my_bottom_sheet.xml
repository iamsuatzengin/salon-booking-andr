<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottomsheet"
    android:backgroundTint="@color/white"
    android:paddingBottom="@dimen/padding24"
    android:paddingHorizontal="@dimen/padding16">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/bsDragHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#CDCFD0" />

    <TextView
        android:id="@+id/tvBottomSheetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_24pt_semibold"
        android:textAlignment="center"
        android:textSize="@dimen/size20"
        app:layout_constraintTop_toBottomOf="@id/bsDragHandle"
        tools:text="Cancel booking" />

    <TextView
        android:id="@+id/tvBottomSheetSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16"
        android:fontFamily="@font/inter_18pt_semibold"
        android:textSize="@dimen/size16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBottomSheetTitle"
        tools:text="Are you sure?" />

    <TextView
        android:id="@+id/tvBottomsheetDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin8"
        android:fontFamily="@font/inter_18pt_regular"
        android:textSize="@dimen/size14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBottomSheetSubtitle"
        tools:text="Canceling your appointment will remove it from your upcoming bookings." />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPrimarySolid"
        style="@style/MainButtonSolid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin8"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSecondaryOutlined"
        tools:text="Continue" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSecondaryOutlined"
        style="@style/SecondaryButtonOutlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin24"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBottomsheetDescription"
        tools:text="Cancel" />
</androidx.constraintlayout.widget.ConstraintLayout>