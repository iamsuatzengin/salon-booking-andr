<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/inter_18pt_semibold"
        android:textSize="@dimen/size18"
        android:textColor="@color/black"
        tools:text="Nearby Salons" />

    <ImageView
        android:id="@+id/ivActionIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin4"
        android:src="@drawable/ic_location"
        android:visibility="gone"
        app:tint="@color/color_main" />

    <TextView
        android:id="@+id/tvActionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_18pt_medium"
        android:textColor="@color/color_main"
        android:textSize="@dimen/size14"
        android:visibility="gone"
        tools:text="View on map" />
</LinearLayout>